<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.andro.foodz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodZ"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.category.catfrag.Sweets"
            android:exported="true" />
        <activity
            android:name=".ui.category.catfrag.FastFood"
            android:exported="true" />
        <activity
            android:name=".ui.category.catfrag.Drinks"
            android:exported="true" />
        <activity
            android:name=".MainPage"
            android:exported="true"
            android:label="@string/title_activity_main_page"
            android:theme="@style/Theme.FoodZ.NoActionBar" />
        <activity
            android:name=".LoginViaEmail"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Registration"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Login"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>