<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFAE65"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ADFFB884"
        android:clickable="true"
        android:elevation="5dp"
        android:fadeScrollbars="true"
        android:fadingEdge="horizontal"
        android:focusable="true"
        android:padding="20dp"
        android:saveEnabled="false"
        android:verticalScrollbarPosition="right">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ProductName2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Price2"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/rupee"
            android:drawablePadding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@+id/ProductName2" />

        <TextView
            android:id="@+id/Category2"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/Price2"
            app:layout_constraintTop_toBottomOf="@+id/ProductName2" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/remove"
            android:layout_width="59dp"
            android:layout_height="57dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#AFABA1"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_remove_24"
            tools:ignore="SpeakableTextPresentationCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Explanation2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@+id/Price2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>